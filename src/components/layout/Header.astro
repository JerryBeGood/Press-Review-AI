---
const currentPath = Astro.url.pathname;
---

<header class="border-b border-border bg-background">
  <nav class="container mx-auto px-4 py-4" aria-label="Main navigation">
    <ul class="flex items-center gap-6 list-none">
      <li>
        <a
          href="/"
          class="text-sm font-medium transition-colors hover:text-primary"
          class:list={[currentPath === "/" && "text-primary"]}
          aria-current={currentPath === "/" ? "page" : undefined}
        >
          Dashboard
        </a>
      </li>
      <li>
        <a
          href="/archive"
          class="text-sm font-medium transition-colors hover:text-primary"
          class:list={[currentPath === "/archive" && "text-primary"]}
          aria-current={currentPath === "/archive" ? "page" : undefined}
        >
          Archive
        </a>
      </li>
    </ul>
  </nav>
</header>
