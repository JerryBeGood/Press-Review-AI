---
import Layout from "../layouts/layout.astro";
import ArchiveView from "../components/archive/ArchiveView";

export const prerender = false;
---

<Layout>
  <div class="container mx-auto px-4 py-6 sm:py-8 max-w-5xl">
    <div class="mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold tracking-tight">Archive</h1>
      <p class="text-muted-foreground mt-1 text-sm sm:text-base">Browse your generated press reviews history</p>
    </div>
    <ArchiveView client:load />
  </div>
</Layout>
