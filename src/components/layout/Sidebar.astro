---
const currentPath = Astro.url.pathname;
import { Newspaper, Archive } from "lucide-react";
---

<aside class="fixed left-0 top-16 h-[calc(100vh-4rem)] w-64 border-r border-border bg-background">
  <div class="flex flex-col h-full">
    <nav class="flex-1 p-4" aria-label="Main navigation">
      <ul class="flex flex-col gap-2 list-none">
        <li>
          <a
            href="/dashboard"
            class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-accent"
            class:list={[currentPath === "/dashboard" && "bg-accent text-primary"]}
            aria-current={currentPath === "/dashboard" ? "page" : undefined}
          >
            <Newspaper className="h-5 w-5" strokeWidth={1.5} />
            Dashboard
          </a>
        </li>
        <li>
          <a
            href="/dashboard/archive"
            class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-accent"
            class:list={[currentPath === "/dashboard/archive" && "bg-accent text-primary"]}
            aria-current={currentPath === "/dashboard/archive" ? "page" : undefined}
          >
            <Archive className="h-5 w-5" strokeWidth={1.5} />
            Archive
          </a>
        </li>
      </ul>
    </nav>
  </div>
</aside>
