---
import "../styles/global.css";
import "@fontsource/space-mono";
import { Toaster } from "../components/ui/sonner";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Press Review AI</title>
  </head>
  <body class="bg-[var(--bg-color)] text-[var(--text-color)] font-mono min-h-screen flex flex-col">
    <!-- Top Banner -->
    <div class="w-full px-4 pt-6 pb-2 flex justify-center">
      <div
        class="w-full max-w-md bg-[var(--yellow-banner)] border-2 border-black shadow-[4px_4px_0px_0px_#000] p-3 text-center"
      >
        <span class="font-bold uppercase tracking-tight text-sm md:text-base">PRESS REVIEW AI</span>
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 w-full px-4 py-1 flex justify-center items-start">
      <div class="w-full max-w-md">
        <slot />
      </div>
    </main>

    <Toaster client:load />
  </body>
</html>
